---
import MainH2 from "../components/MainH2.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { ui, defaultLang } from '../i18n/ui';


const urlLang = getLangFromUrl(Astro.url);
const lang = urlLang || defaultLang;
const t = useTranslations(lang);
---

<section class="pl-6 mt-[200px]" id="about-me">
    <MainH2 title="aboutme.title" data-i18n="aboutme.title" />
    <div class="mt-2 flex flex-col md:flex-row items-center md:items-start gap-8">
      <div class="flex-1">
        <p class="font-montserrat text-black dark:text-white text-ls leading-relaxed" data-i18n="aboutme.description">
          {t('aboutme.description')}
        </p>
      </div>
      <div class="flex-shrink-0">
        <img 
          src="/aboutme.avif" 
          alt={t('aboutme.alt')}
          title={t('aboutme.alt')}
          class="w-64 h-64 rounded-lg object-cover shadow-lg"
          id="aboutMeImage"
        >
      </div>
    </div>
</section>
