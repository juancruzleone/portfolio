---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import { ui, defaultLang } from '../i18n/ui';

const urlLang = getLangFromUrl(Astro.url);
const lang = urlLang || defaultLang;
const t = useTranslations(lang);

interface Props {
    title: string
}

const { title } = Astro.props
---

<h2 class="text-black dark:text-white font-montserrat text-2xl border-b-[4px] border-light dark:border-celeste font-medium inline-block" data-i18n={title}>
    {t(title)}
</h2>
