---
interface Props {
    name: string;
    required?: boolean;
}

const { name, required } = Astro.props;
---

<textarea 
    name={name}
    required={required}
    data-i18n-placeholder="contact.textareaMessage" 
    class="p-2 rounded border border-black dark:border-white bg-transparent text-black dark:text-white h-32 placeholder:text-black dark:placeholder:text-gray-500"
></textarea>
