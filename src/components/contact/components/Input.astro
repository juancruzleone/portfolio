---
interface Props {
    name: string;
    required?: boolean;
}

const { name, required } = Astro.props;
---

<input 
    type="email" 
    name={name}
    required={required}
    data-i18n-placeholder="contact.inputEmail" 
    class="p-2 rounded border border-black dark:border-white bg-transparent text-black dark:text-white"
>